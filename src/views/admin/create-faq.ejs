<!-- src/views/admin/create-faq.ejs -->
<div class="row justify-content-center">
    <div class="col-12 col-lg-10">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 pt-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="card-title mb-0">Create New FAQ</h2>
                        <p class="text-muted mb-0">Add a new frequently asked question</p>
                    </div>
                    <a href="/admin" class="btn btn-outline-secondary">
                        <i class="ri-arrow-left-line me-2"></i>Back
                    </a>
                </div>
            </div>
            <div class="card-body p-4">
                <form action="/admin/faqs/create" method="POST" class="needs-validation" novalidate>
                    <!-- Question Field -->
                    <div class="mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                        <label for="question" class="form-label">
                            <i class="ri-question-line me-2"></i>Question
                        </label>
                        <input type="text"
                               class="form-control form-control-lg"
                               id="question"
                               name="question"
                               required
                               placeholder="Enter your question here">
                        <div class="invalid-feedback">
                            Please provide a question
                        </div>
                    </div>

                    <!-- Answer Field with better CKEditor container -->
                    <div class="mb-4 animate__animated animate__fadeInUp animate__delay-2s">
                        <label for="answer" class="form-label">
                            <i class="ri-chat-1-line me-2"></i>Answer
                        </label>
                        <div class="editor-container">
                            <textarea class="form-control editor"
                                    id="answer"
                                    name="answer"
                                    required
                                    placeholder="Provide a detailed answer"></textarea>
                        </div>
                        <div class="invalid-feedback">
                            Please provide an answer
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-2 animate__animated animate__fadeInUp animate__delay-3s">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isActive" name="isActive" checked>
                            <label class="form-check-label" for="isActive">
                                Make FAQ active immediately
                            </label>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-outline-secondary" onclick="window.location.href='/admin'">
                                <i class="ri-close-line me-2"></i>Cancel
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="ri-save-line me-2"></i>Create FAQ
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Preview Card -->
        <div class="card shadow-sm mt-4 animate__animated animate__fadeInUp animate__delay-4s">
            <div class="card-header bg-white border-0 py-3">
                <h3 class="card-title mb-0">Preview</h3>
            </div>
            <div class="card-body">
                <div id="previewQuestion" class="h5 mb-3">Your question will appear here</div>
                <div id="previewAnswer" class="text-muted">Your answer will appear here</div>
            </div>
        </div>
    </div>
</div>

<style>
.form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.25);
}

.form-control-lg {
    font-size: 1.1rem;
}

.form-check-input:checked {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn {
    padding: 0.5rem 1.5rem;
    font-weight: 500;
}

.card {
    border: none;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
}

/* Editor Container Styles */
.editor-container {
    position: relative;
    margin-bottom: 1rem;
}

/* CKEditor customization */
.cke_chrome {
    border: 1px solid #e2e8f0 !important;
    border-radius: 0.5rem !important;
    box-shadow: none !important;
    margin-top: 0.5rem;
}

.cke_top {
    border-bottom: 1px solid #e2e8f0 !important;
    background: #f8fafc !important;
    padding: 8px !important;
    border-radius: 0.5rem 0.5rem 0 0 !important;
}

.cke_bottom {
    border-top: 1px solid #e2e8f0 !important;
    background: #f8fafc !important;
    padding: 6px 8px !important;
    border-radius: 0 0 0.5rem 0.5rem !important;
}

.cke_contents {
    padding: 1rem !important;
    min-height: 300px !important;
}

.cke_wysiwyg_frame {
    padding: 0.5rem !important;
}

/* Preview card styling */
#previewQuestion {
    color: #2d3748;
    font-weight: 600;
}

#previewAnswer {
    color: #4a5568;
    line-height: 1.6;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize form validation
    const form = document.querySelector('.needs-validation');
    const questionInput = document.getElementById('question');
    const previewQuestion = document.getElementById('previewQuestion');
    const previewAnswer = document.getElementById('previewAnswer');

    // Live preview for question
    questionInput.addEventListener('input', function() {
        previewQuestion.textContent = this.value || 'Your question will appear here';
    });

    // Initialize CKEditor with custom configuration
    CKEDITOR.replace('answer', {
        height: '300px',
        removePlugins: 'elementspath,resize',
        toolbar: [
            { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline', 'Strike'] },
            { name: 'paragraph', items: ['NumberedList', 'BulletedList', '-', 'Blockquote'] },
            { name: 'links', items: ['Link', 'Unlink'] },
            { name: 'styles', items: ['Format'] },
            { name: 'tools', items: ['Maximize'] },
            { name: 'document', items: ['Source'] }
        ],
        format_tags: 'p;h2;h3;h4',
        removeButtons: '',
        contentsCss: ['https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'],
        allowedContent: true,
        on: {
            change: function() {
                previewAnswer.innerHTML = this.getData() || 'Your answer will appear here';
            },
            instanceReady: function(ev) {
                // Customize the editor instance after it's ready
                ev.editor.dataProcessor.htmlFilter.addRules({
                    elements: {
                        $: function(element) {
                            // Add Bootstrap classes to elements
                            if (element.name == 'table') {
                                element.addClass('table');
                            }
                        }
                    }
                });
            }
        }
    });

    // Form validation
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});
</script>